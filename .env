# Database Configuration
MONGO_URI=mongodb://localhost:27017/sms

# JWT Secret Key (required for signing tokens)
JWT_SECRET=your_strong_jwt_secret_here

# Server Port
PORT=3001

# SMTP Email Configuration (Optional)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=user@example.com
SMTP_PASS=your_smtp_password
SMTP_SECURE=false    # true for SSL (port 465), false for STARTTLS (587)
SMTP_FROM="St. Andrews SMS" <no-reply@standrews.edu.gh>

# Logging Configuration
LOG_LEVEL=info  # options: error, warn, info, verbose, debug, silly
